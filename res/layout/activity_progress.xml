<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" xmlns:android1="http://schemas.android.com/apk/res/android">

    <ProgressBar
        android1:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_gravity="center" />

    <TextView
        android1:id="@+id/lblMessageEditorEmail"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="@string/please_wait"
        android1:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
