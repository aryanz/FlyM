<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.in.aryanz.FlyM"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name="co.in.aryanz.FlyM.IndexActivity"
            android:label="@string/title_activity_index" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.in.aryanz.FlyM.SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="co.in.aryanz.FlyM.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="co.in.aryanz.FlyM.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="co.in.aryanz.FlyM.ContactActivity"
            android:label="@string/title_activity_contact" >
        </activity>
        <activity
            android:name="co.in.aryanz.FlyM.MessageActivity"
            android:label="@string/title_activity_message" >
        </activity>
        <activity
            android:name="co.in.aryanz.FlyM.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="co.in.aryanz.FlyM.MessageEditorActivity"
            android:label="@string/title_activity_message_editor" >
        </activity>
    </application>

</manifest>
